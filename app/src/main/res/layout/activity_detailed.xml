<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simplelist.views.DetailsActivity">


    <ImageView
        android:id="@+id/image_details"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/image_margin_bottom"
        android:contentDescription="pic">

    </ImageView>

    <TextView
        android:id="@+id/text_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_details"
        android:layout_marginLeft="@dimen/title_margin_horizontal"
        android:layout_marginRight="@dimen/title_margin_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/description_margin_top"
        android:layout_marginLeft="@dimen/description_margin"
        android:layout_marginRight="@dimen/description_margin"
        android:layout_below="@+id/text_details">

    </TextView>

</RelativeLayout>
